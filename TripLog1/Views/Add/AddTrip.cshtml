@model Trip
@{
    string title = ViewBag.Action;
    ViewBag.Title =title;

}
   
    <div class="container">
      
        <h2>Add Trip Destination and Dates</h2>
        <form asp-controller="Add" asp-action="AddInfo" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label for="Destination">Destination</label>
                <input asp-for="Destination">
                
            </div>

            <div class="form-group">
                <label for="Accomodations">Accommodations</label>
                <input asp-for="Accommodations">
            </div>

            <div class="form-group">
                <label asp-for="StartDate">Start Date</label>
                <input type="text" asp-for="StartDate" >
              
            </div>

            <div class="form-group">
                <label asp-for="EndDate">End Date</label>
                <input type="text" asp-for="EndDate">
               
            </div>

            <input type="hidden" asp-for="TripID" />

            <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>










