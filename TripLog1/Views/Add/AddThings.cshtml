@model Trip
@{
    string title = ViewBag.Action;
    ViewBag.Title = title;

}


    <div class="container">

        <h2>Add Things To Do</h2>
        <form asp-controller="Add" asp-action="Index" method="post">

            <div class="form-group">
                <label for="Things" class="control-label"></label>
                <input asp-for="Things"class="form-control">
            </div>

            <div class="form-group">
                <label for="Things1" class="control-label"></label>
                <input asp-for="Things1"class="form-control">
            </div>

            <div class="form-group">
                <label for="Things2" class="control-label"></label>
                <input asp-for="Things2"class="form-control">
            </div>

            <input type="hidden" asp-for="TripID" />

            <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>

